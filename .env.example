# --- Frontend env (Vite) ---

# Full URL of the backend API.
# If you configure frontend rewrites (Netlify/Vercel) you can omit this and keep relative /api.
VITE_API_BASE_URL=https://your-backend.example.com

# Use mock APIs (no backend required). Great for quick previews.
VITE_MOCK=false

# WhatsApp community URL shown in footer
VITE_WHATSAPP_COMMUNITY_URL=

# Spotify widget (optional). If empty, backend latest-playlist and a safe fallback are used.
VITE_SPOTIFY_USER_ID=
VITE_SPOTIFY_PLAYLIST_URL=

# Firebase client SDK (public keys)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

